{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <table border="1">
            <tr>
                <td>Book:</td>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <td>Released:</td>
                <td>{{ book.releaseDate.format('Y-m-d') }}</td>
            </tr>
            <tr>
                <td>Pages</td>
                <td>{{ book.length }}</td>
            </tr>
            <tr>
                <td>Genres</td>
                <td>
                    {% if book.genres|length > 0 %}
                        <ul>
                            {% for genre in book.genres %}
                                <li><a href="/genre/{{ genre.name }}">{{ genre.name }}</a></li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        n/a
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
{% endblock %}


